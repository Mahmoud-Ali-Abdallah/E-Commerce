@inject NavigationManager navigationManager

<div class="card m-2" style="width:25rem">
    <div class="card-body">
        <h5 class="card-title">Order Summary</h5>
        <div class="cad-text d-flex jsutify-content-between">
            <div>
                Items (@itemsCount)
            </div>
            <div>
                @itemsTotalPrice.ToString("c")
            </div>
        </div>
        <div class="cad-text d-flex jsutify-content-between">
            <div>
                Shipping And Handling &nbsp;&nbsp;
            </div>
            <div>
                <text>$0.00</text>
            </div>
        </div>
        <div class="cad-text d-flex jsutify-content-between">
            <div>
                Estimated Tax : &nbsp;
            </div>
            <div>
                <text>$0.00</text>
            </div>
        </div>

        <div class="cad-text d-flex jsutify-content-between" style="color:darkred">
            <div>
                <b>Order Total :</b>
            </div>
            <div>
                <b>@itemsTotalPrice.ToString("c")</b>
            </div>
        </div>
    </div>
    @if (!HidePlaceOrderButton)
    {
        <button class="btn btn-primary" @onclick="PlaceOrder">Place your order</button>

    }

</div>

@code {
    int itemsCount = 0;
    double itemsTotalPrice = 0;

    [Parameter]
    public Order Order { get; set; }

    [Parameter]
    public bool HidePlaceOrderButton { get; set; }

    protected override void OnParametersSet()
    {
        if (Order != null)
        {
            itemsCount = Order.LineItems.Count;
            itemsTotalPrice = 0;
            Order.LineItems.ForEach(x => itemsTotalPrice += x.Price * x.Quantity);
        }
    }


    public void PlaceOrder()
    {
        navigationManager.NavigateTo("/PlaceOrder");
    }
}
